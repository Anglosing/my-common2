
{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "plugins": [
    "react",
    "babel"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread":true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": [2, 4, {
      "SwitchCase": 1
    }], // 缩进风格
    "react/jsx-indent": [2, 4], // 验证JSX中的缩进
    "react/jsx-indent-props": [2, 4], // 验证JSX中的props缩进
    "react/jsx-closing-tag-location": 1, // 是否强制开始标签闭合标签位置
    "react/jsx-closing-bracket-location": 1, // 是否强制闭合标签的位置
    "camelcase": 2, // 是否强制驼峰法命名
    "curly": 2, // 是否必须使用 if(){} 中的{}
    "eqeqeq": 2, // 是否必须使用全等
    "brace-style": 0, // 大括号风格
    "quotes": [1, "single"], // 引号类型 `` "" ''
    "space-infix-ops": 2, // 插入符合变量之间需要添加一个空格
    "no-param-reassign": 0, // 是否禁止给参数重新赋值
    "prefer-spread": 2, // 是否首选展开运算
    "no-plusplus": 0, // 是否禁止使用++，--
    "no-script-url": 0, // 是否禁止使用javascript:void(0)
    "jsx-a11y/anchor-is-valid": 0, // 是否允许正常地使用Link
    "linebreak-style": 0, // 换行风格
    "no-console": 0, // 是否禁止使用console
    "arrow-body-style": 0, // 强制或禁止在箭头函数体的周围使用大括号
    "max-len": [2, 200], // 强制执行最大行长度以增加代码的可读性和可维护性
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/prop-types": 0, // 防止在React组件定义中丢失props验证
    "consistent-return": 0, // return 后面是否允许省略
    "react/sort-comp": 0, // 是否强制组件方法顺序
    "no-shadow": 1, // 外部作用域中的变量不能与它所包含的作用域中的变量或参数同名
    "react/jsx-filename-extension": 1, // JSX文件后缀名扩展
    "no-restricted-syntax": 1, // 是否禁止使用特定的语法
    "no-underscore-dangle": 1, // 是否禁止标识符中有悬空下划线_bar
    "jsx-quotes": 1, // 是否强制在JSX属性中一致地使用双引号或单引号
    "comma-dangle": 1, // 是否允许对象字面量项尾有逗号
    "arrow-parens": 1, // 箭头函数用小括号括起来
    "padded-blocks": 0, // 块语句内行首行尾是否要空行
    "func-names": 1, // 是否函数表达式必须有名字
    "object-shorthand": 1, // 是否强制对象字面量缩写语法
    "react/no-multi-comp": 1 ,// 防止每个文件有多个组件定义
    "object-curly-newline": 0, // 多对象json是否必须新开行
  },
  "extends": "airbnb"
}
